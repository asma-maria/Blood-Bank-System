@model BloodBankManagementSystem.BloodStock

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*<link href="~/CustomsStyleSheet/PatientStyleSheet.css" rel="stylesheet" />*@
</head>

<h1 class="text-right" style="font-family: 'Anton', sans-serif;">Blood List</h1>

@using (Html.BeginForm("Create", "BloodStocks", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-lg btn-danger">@Html.ActionLink("View List", "Index")</button>
                <br />
                <br />

                <img src="~/Images/blood_table.jpg" class="img-responsive img-rounded" />
                

                 

            </div>
            <div class="col-md-8">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BloodListId)

                <div class="form-group">
                    @Html.LabelFor(model => model.BloodName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BloodName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BloodName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-danger" />
                    </div>
                </div>
              

            </div>

        </div>

    </div>
}


