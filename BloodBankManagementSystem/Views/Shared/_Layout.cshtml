<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @*<link href="~/Content/mystyle.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <style>
        body {
            /*font-family: Arial, Helvetica, sans-serif;*/
            font-family: 'Inria Serif', serif;
        }

        .bg-img {
            background-image: url('../../Images/blood-donation.jpg');
            min-height: 200px;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            /* Needed to position the navbar */
            position: relative;
        }

        }

        .mynav_navbar {
            overflow: hidden;
            background-color: red;
            background-image: linear-gradient(red, red 40%, red);
        }

            .mynav_navbar a {
                float: left;
                font-size: 16px;
                color: white;
                text-align: center;
                padding: 15px 16px;
                text-decoration: none;
            }

        .mynav_dropdown {
            float: left;
            overflow: hidden;
        }

            .mynav_dropdown .mynav_dropbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: white;
                padding: 14px 16px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            .mynav_navbar a:hover, .mynav_dropdown:hover .mynav_dropbtn {
                background-color: darkred;
            }

        .mynav_dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .mynav_dropdown-content a {
                float: none;
                color: maroon;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .mynav_dropdown-content a:hover {
                    background-color:burlywood;
                }

        .mynav_dropdown:hover .mynav_dropdown-content {
            display: block;
        }
        /*#ex {
        color: white;
        font-size: 47px;
        -webkit-text-stroke: 3px #E21F03;
        }*/
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-image: linear-gradient(maroon, #e96565 40%, #2e2121)">
        <div class="mynav_navbar ">
            <a>
                <img height="20" width="20" src="~/Images/logo.png" alt="LOGO" class="img-responsive" />
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink(" Online Blood Bank Portal", "Index", "Employees")
            }
            else
            {
                @Html.ActionLink(" Online Blood Bank Portal", "Login", "Account")
            }

        @Html.ActionLink("About", "Index", "Home",null, new { @style = "margin-left:100px;" })
        @Html.ActionLink("Contact", "Contacts", "Home")
      
            @if (User.Identity.IsAuthenticated)
            {
                <div class="mynav_dropdown">
                    <button class="mynav_dropbtn">
                        User Activity Form
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="mynav_dropdown-content">
                        @Html.ActionLink("EmployeeList", "Index", "Employees")
                        @Html.ActionLink("Donor Registration", "Index", "Donors")
                        @Html.ActionLink("Patient Registration", "Index", "Patients")

                        @Html.ActionLink("Requested Bood List", "Index", "RequestBloods")
                        @Html.ActionLink("Blood Details", "Index", "BloodDetails")

                        @Html.ActionLink("Blood Stock", "Index", "BloodStocks")
                    </div>
                </div>
            }

        <div class="nav navbar-nav navbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <a style="background-color: transparent;">Logged in as <strong> @User.Identity.Name </strong></a>
                if(User.IsInRole("Admin"))
                {
                @Html.ActionLink("User List", "getUserList", "Home")
                }
                @Html.ActionLink("Logout", "Logout", "Account", null, new { @style = "margin-right:30px;" })
            }
        </div>
        </div>
    </div>


    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Images/carousel2small.png" alt="New York" style="width:100%;">
            </div>
            @*<div class="carousel-caption">
                    <h3 id="ex">Please save others</h3>
                    <p style="color:firebrick">To give blood you need neither extra strength nor extra food, and you will save a life.!</p>
                </div>*@

            <div class="item">
                <img src="~/Images/carousel6.jpg" alt="New York" style="width:100%;">

            </div>
            @*<div class="carousel-caption">
                    <h3 id="ex">A life may depend on a gesture from you, a bottle of Blood</h3>
                    <p style="color:black" ;>Thank you,Sir!</p>
                </div>*@

            <div class="item">
                <img src="~/Images/carousel7.png" alt="New York" style="width:100%;">

            </div>
            @*<div class="carousel-caption">
                    <h3 id="ex">The Blood You Donate Gives Someone Another Chance At Life</h3>
                    <p style="color:darkblue">The Blood Donor of today may be recipient of tomorrow</p>
                </div>*@

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container body-content">
        @RenderBody()
       
        <footer>
           @*<p><center><img height="100" width="100" src="~/Images/health.gif"class="img-responsive" /></center></p>*@
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/CustomScript.js"></script>

</body>
</html>